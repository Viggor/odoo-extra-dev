    </t>


    <t t-name="CustomerListWidget">
        <div class='customer-list-container'>
            <div class="customer-list-scroller">
                <table id="customers-screen-ol" class="customer-list">
                </table>
            </div>
        </div>
    </t>

    <t t-name="CustomerWidget">
        <tr class='customer' onclick="document.location.href='#'">
             <!-- onclick="document.location.href='#'" -->
                <td>
                    <!-- <a href="#"> -->
                    <span class="customer-field customer-name">
                        <t t-esc="widget.model.get('name')"/> <t t-esc="widget.model.get('first_name')"/>
                    </span>
                    <!-- </a> -->
                </td>
                <td>
                    <!-- <a href="#"> -->
                    <span class="customer-field">
                        <t t-if="widget.model.get('email')">
                            <t t-esc="widget.model.get('email')"/>
                        </t>
                    </span>
                    <!-- </a> -->
                </td>
                <td>
                    <!-- <a href="#"> -->
                    <span class="customer-field customer-date">
                        <t t-if="widget.model.get('birth_date')">
                            <t t-esc="widget.get_birth_date()"/>
                        </t>
                    </span>
                    <!-- </a> -->
                </td>
                <td>
                    <!-- <a href="#"> -->
                    <span class="customer-field customer-location">
                        <t t-if="widget.model.get('birth_location')">
                            <t t-esc="widget.model.get('birth_location')"/>
                        </t>
                    </span>
                    <!-- </a> -->
                </td>
        </tr>
    </t>

    <t t-name="SetMatriculePopupWidget">
        <div class="modal-dialog">
            <div class="popup-selection">
                <div class="matricule-container">
                    <div class=".matricule-img">
                        <img src="/point_of_sale/static/src/img/icons/scan.svg" height="100px" alt="image matricule" />
                    </div>
                    <br/>
                    <div class="matricule-title">
                        Veuillez saisir le matricule de l'arme: <span id="weapon_name"></span>
                    </div>
                    <br/>
                    <div class="matricule-input">
                        <input placeholder="Matricule" id="matricule-input"/>
                    </div>
                </div>

                <div id="customer-cancel" class = "button cancel">
                    Cancel
                </div>

                <div id="matricule-validate" class="button validate">
                    Validate
                </div>
            </div>
        </div>
    </t>

    <t t-extend="Orderline">
        <t t-jquery=".info" t-operation="after">
            <t t-if="line.get_matricule() != false">
                <li class="info">
                    <b>Matricule:</b> <t t-esc="line.get_product().weapon_matricule_number"/>
                </li>
            </t>
        </t>
    </t>


    <t t-name="Product">
        <span class='product' t-att-data-product-id="product.id">
            <div class="product-img">
                <img t-att-src='image_url' />
                <t t-if="!product.to_weight">
                    <span class="price-tag">
                        <t t-esc="widget.format_currency(product.price)"/>
                    </span>

                </t>
                <t t-if="product.to_weight">
                    <span class="price-tag">
                        <t t-esc="widget.format_currency(product.price)+'/Kg'"/>
                    </span>
                </t>
                <!-- HACK nouveau tag pour quantité-->
                <span class="qty-tag">
                    <t t-esc="product.qty_available + ' ' + product.uom_id[1]"/>
                </span>
            </div>
            <div class="product-name">
                <t t-esc="product.name"/>
            </div>
        </span>
    </t>




</templates>