<templates id="template" xml:space="preserve">

    <t t-name="CustomernameWidget">
        <span class="customername">
                <t t-esc="widget.get_name()" /> <t t-esc="widget.get_first_name()" /> <t t-esc="widget.get_birth_date()" />
        </span>
    </t>

    <t t-name="SelectCustomerPopupWidget">
        <div class="modal-dialog">
            <div class="popup-selection">
                <div class="customer-title">
                    Veuillez choisir un client.
                </div>
                <div class="customer-searchbox">
                    <input placeholder="Search Customers" />
                    <img class="customer-search-clear" src="/point_of_sale/static/src/img/search_reset.gif" />
                </div>

                <div class="content-container">
                    <span class="placeholder-CustomerListWidget" />
                </div>

                <div id="customer-cancel" class = "button cancel">
                    Cancel
                </div>

                <div id="customer-create" class="button create">
                    Create
                </div>
            </div>
        </div>
    </t>

    <t t-name="CreateCustomerPopupWidget">
        <div class="modal-dialog">
        <div class="popup-selection">
            <div class="customer-title">
                    Nouveau client.
                </div>
            <div id="customer-fields">
                <div class="customer-label">
                    Est une société: 
                </div>
                <div id="customer_is_company" class="customer-input">
                    <input type="checkbox"/><br/>
                </div>
                <div class="customer-label">
                    Nom: 
                </div>
                <div id="customer_name" class="customer-input">
                    <input placeholder="Nom"/><br/>
                </div>
                <br/>
                <div class="customer-label">
                    Nom de jeune fille:
                </div>
                <div id="customer_maiden_name" class="customer-input">
                    <input placeholder="Nom de jeune fille"/><br/>
                </div>
                <br/>
                <div class="customer-label">
                    Prénoms:
                </div>
                <div id="customer_first_name" class="customer-input">
                    <input placeholder="Prénom"/><br/>
                </div>
                <br/>
                <div class="customer-label">
                    Rue:
                </div>
                <div id="customer_street" class="customer-input">
                    <input placeholder="Rue..."/><br/>
                </div>
                <div class="customer-label">

                </div>
                <div id="customer_street2" class="customer-input">
                    <input placeholder="Rue..."/><br/>
                </div>
                <div class="customer-label">
                    Code postal:
                </div>
                <div id="customer_zip" class="customer-input">
                    <input placeholder="Code postal"/><br/>
                </div>
                <div class="customer-label">
                    Ville:
                </div>
                <div id="customer_city" class="customer-input">
                    <input placeholder="Ville"/><br/>
                </div>
                <br/>
                <div class="customer-label">
                    Date de naissance:
                </div>
                <div id="customer_birth_date" class="customer-input">
                    <input placeholder="Date de naissance" type="date"/><br/>
                </div>
                <br/>
                <div class="customer-label">
                    Lieu de naissance:
                </div>
                <div id="customer_birth_location" class="customer-input">
                    <input placeholder="Lieu naissance"/><br/>
                </div>
                <br/>
                <div class="customer-label">
                    Téléphone:
                </div>
                <div id="customer_phone" class="customer-input">
                    <input placeholder="Téléphone"/><br/>
                </div>
                <br/>
                <div class="customer-label">
                    Mobile:
                </div>
                <div id="customer_mobile" class="customer-input">
                    <input placeholder="Mobile"/><br/>
                </div>
                <br/>
                <div class="customer-label">
                    email:
                </div>
                <div id="customer_email" class="customer-input">
                    <input placeholder="Email"/><br/>
                </div>

            </div>
            <div id="customer-cancel" class = "button cancel">
                Cancel
            </div>
            <div id="customer-confirm-create" class="button confirm">
                Create
            </div>
        </div>
        </div>
    </t>

